{
  "$schema": "https://docs.claude.com/schema/settings.json",
  "description": "User-level settings template for claude-multi-agent-framework. Install to ~/.claude/settings.json",

  "permissions": {
    "defaultMode": "auto-accept",
    "allow": [
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(git log)",
      "Bash(pytest)",
      "Bash(python -m pytest)",
      "Bash(npm test)",
      "Bash(npm run test)",
      "Read(~/.claude/**)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(dd if=*)",
      "Write(~/.ssh/**)",
      "Write(~/.aws/**)",
      "Read(.env)",
      "Read(**/.env)",
      "Read(**/*.key)",
      "Read(**/*.pem)"
    ]
  },

  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.py",
    "padding": 0
  },

  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
    "OTEL_SERVICE_NAME": "claude-multi-agent-framework"
  },

  "extraKnownMarketplaces": {
    "Claude-Dev-Framework": {
      "source": {
        "source": "github",
        "repo": "fda3r6sbvdgq09gse2/claude-dev-framework"
      }
    }
  },

  "enabledPlugins": {
    "development-agents@Claude-Dev-Framework": true,
    "management-agents@Claude-Dev-Framework": true,
    "quality-agents@Claude-Dev-Framework": true,
    "sprint-commands@Claude-Dev-Framework": true,
    "workflow-hooks@Claude-Dev-Framework": true,
    "context-utilities@Claude-Dev-Framework": true
  }
}

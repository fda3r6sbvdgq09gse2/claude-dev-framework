{
  "$schema": "https://docs.claude.com/schema/settings.json",
  "description": "User-level settings template for claude-multi-agent-framework. Install to ~/.claude/settings.json",

  "permissions": {
    "defaultMode": "auto-accept",
    "allow": [
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(git log)",
      "Bash(pytest)",
      "Bash(python -m pytest)",
      "Bash(npm test)",
      "Bash(npm run test)",
      "Read(~/.claude/**)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(dd if=*)",
      "Write(~/.ssh/**)",
      "Write(~/.aws/**)",
      "Read(.env)",
      "Read(**/.env)",
      "Read(**/*.key)",
      "Read(**/*.pem)"
    ]
  },

  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.py",
    "padding": 0
  },

  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
    "OTEL_SERVICE_NAME": "claude-multi-agent-framework"
  },

  "extraKnownMarketplaces": {
    "ClaudeDevFramework-Marketplace": {
      "source": {
        "source": "github",
        "repo": "fda3r6sbvdgq09gse2/claude-dev-framework"
      }
    }
  },

  "enabledPlugins": {
    "backend-agent@ClaudeDevFramework-Marketplace": true,
    "frontend-agent@ClaudeDevFramework-Marketplace": true,
    "integration-agent@ClaudeDevFramework-Marketplace": true,
    "testing-agent@ClaudeDevFramework-Marketplace": true,
    "ceo-agent@ClaudeDevFramework-Marketplace": true,
    "documentation-agent@ClaudeDevFramework-Marketplace": true,
    "devops-agent@ClaudeDevFramework-Marketplace": true,
    "qa-automation-agent@ClaudeDevFramework-Marketplace": true,
    "ux-product-agent@ClaudeDevFramework-Marketplace": true
  }
}
